#include <bits/fileno.h>
#include <stdlib.h>
#include <unistd.h>
#include <stdio.h>
//#include <types.h>

#define LINE_SIZE 30
#define LINES 6
#define PIC_SIZE 1024


#define ESCAPE 0x1B
#define BRACKET 0x5B

/*void print_buf(char buf[6][5])
