int main(int argc, char** argv)
{
	char pic_1[PIC_SIZE] = 	" _    _          _   _                         \n" 
			       	"| |  | |        | | | |                        \n" 
			       	"| |__| |   ___  | | | |   ___                  \n"
			       	"|  __  |  / _ \\ | | | |  / _ \\               \n"
			       	"| |  | | |  __/ | | | | | (_) |                \n"
				"|_|  |_|  \\___| |_| |_|  \\___/               \n";
	char pic_2[PIC_SIZE] =  " __          __                 _       _      \n"
				" \\ \\        / /                | |     | |   \n"
				"  \\ \\  /\\  / /    ___    _ __  | |   __| |  \n"
				"   \\ \\/  \\/ /    / _ \\  | '__| | |  / _` | \n"
				"    \\  /\\  /    | (_) | | |    | | | (_| |   \n"
				"     \\/  \\/      \\___/  |_|    |_|  \\__,_| \n";
	
	//char onechar[2] = "\0\0";	
	
	int i;
	for (i = 0; i < 10; i ++)
	{
		write(STDOUT_FILENO, pic_1, PIC_SIZE);
		sleep(200);
		printf("%c%c6A", ESCAPE, BRACKET);
		write(STDOUT_FILENO, pic_2, PIC_SIZE);
		sleep(200);
		printf("%c%c6A", ESCAPE, BRACKET);
	}	
	
	return 0;
}
